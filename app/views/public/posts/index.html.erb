<div class='col-md-8 offset-md-1'>
  <h2>投稿一覧</h2>
  <%= flash[:notice] %>
  <div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-4 mb-4">
      <div class="card" style="width: 300px; height: 300px;">
        <% if post.image.attached? %>
          <%= image_tag post.image, class: "card-img-top", style: "object-fit: cover; width: 100%; height: 150px;" %>
        <% else %>
          <%= image_tag 'no_image.jpg', class: "card-img-top", style: "object-fit: cover; width: 100%; height: 150px;" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to post.title, post_path(post.id) %></h5>
          <p class="card-text"><%= post.user.name %></p>
          <p class="card-text"><%= "#{post.post_comment.count} コメント" %> ・ <%= "#{post.favorites.count} いいね" %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>