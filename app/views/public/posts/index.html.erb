<div class='col-md-8 offset-md-1'>
  <h2>Sweets Club</h2>

  <table class='table table-hover table-inverse'>
    <thead>
      <th></th>
      <th>タイトル</th>
      <th>説明</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
           <% if post.image.attached? %>
              <%= image_tag post.image, size: "100x100" %>
           <% else %>
              <%= image_tag 'no_image', size: "100x100" %>
           <% end %>
           <p><%= link_to @user.name, user_path(@user) %></p>
          </td>
          <td><%= link_to post.title, post_path(post.id) %></td>
          <td><%= post.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>