<h3><%= @user.name %>さんのマイページ</h3>
<%= flash[:notice] %>


<div class="row">
  <div class="col-md-1">
    <h4>フォロー数</h4>
    <h4><%= @user.followings.count %></h4>
  </div>
  <div class="col-md-2">
    <h4>フォロワー数</h4>
    <h4><%=@user.followers.count %></h4>
  </div>
</div>

<!--フォローフォロワー機能-->
<% if current_user %>
  <h4><%= render "public/relationships/btn", user: @user, options: { class: "follow-link" } %></h4>
<% end %>

<table class='table table-hover table-inverse'>
    <thead>
      <th></th>
      <th>タイトル</th>
      <th>説明</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
           <% if post.image.attached? %>
              <%= image_tag post.image, size: "100x100" %>
           <% else %>
              <%= image_tag 'no_image.jpg', size: "100x100" %>
           <% end %>
           <p><%= link_to post.user.name, user_path(post.user) %></p>
          </td>
          <td><%= link_to post.title, post_path(post.id) %></td>
          <td><%= post.body %></td>
          <!--コメント数を表示-->
          <td><%= "#{post.post_comment.count} コメント" %></td>
        </tr>
      <% end %>
     </tboy>
</table>