<%= flash[:notice] %>

<table>
  <tr>
    <th>ユーザー名</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>フォロー数</th>
    <td><%= @user.followings.count %></td>
    <th>フォロワー数</th>
    <td><%=@user.followers.count %></td>
  </tr>
  <tr>
  <!--フォローフォロワー機能-->
  <% if current_user %>
  <td><%= render "public/relationships/btn", user: @user, options: { class: "follow-link" } %></td>
  <% end %>
  </tr>
</div>




<table class='table table-hover table-inverse'>
    <thead>
      <th></th>
      <th>タイトル</th>
      <th>説明</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
           <% if post.image.attached? %>
              <%= image_tag post.image, size: "100x100" %>
           <% else %>
              <%= image_tag 'no_image.jpg', size: "100x100" %>
           <% end %>
           <p><%= link_to post.user.name, user_path(post.user) %></p>
          </td>
          <td><%= link_to post.title, post_path(post.id) %></td>
          <td><%= post.body %></td>
          <!--コメント数を表示-->
          <td><%= "#{post.post_comment.count} コメント" %></td>
        </tr>
      <% end %>
     </tboy>
</table>