<h4>マイページ</h4>
<%= flash[:notice] %>
<table>
  <tr>
    <th>ユーザー名</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
</table>

<h4><%= link_to '編集', edit_user_path(@user) %></h4>

<table class='table table-hover table-inverse'>
    <thead>
      <th></th>
      <th>タイトル</th>
      <th>説明</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
           <% if post.image.attached? %>
              <%= image_tag post.image, size: "100x100" %>
           <% else %>
              <%= image_tag 'no_image', size: "100x100" %>
           <% end %>
           <p><%= link_to post.user.name, user_path(post.user) %></p>
          </td>
          <td><%= link_to post.title, post_path(post.id) %></td>
          <td><%= post.body %></td>
          <!--コメント数を表示-->
          <td><%= "#{post.post_comment.count} コメント" %></td>
        </tr>
      <% end %>
     </tboy>
</table>