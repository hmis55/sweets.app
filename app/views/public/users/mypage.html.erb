<h4>マイページ</h4>
<%= flash[:notice] %>
<table>
  <tr>
    <th>ユーザー名</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
  <% if @user.email != "guest@example.com" %>
    <tr>
      <td><%= link_to "プロフィール編集", edit_user_path(@user) %></td>
    </tr>
  <% end %>
</table>
<table class='table table-hover table-inverse'>
    <thead>
      <th></th>
      <th>タイトル</th>
      <th>説明</th>
      <th colspan="4"></th>
    </thead>
　<tbody>
   <% @posts.each do |post| %>
    <tr>
      <td>
        <% if post.image.attached? %>
          <%= image_tag post.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
      </td>
      <td><%= link_to post.title, post_path(post.id) %></td>
      <td><%= post.body %></td>
      <!--コメント数を表示-->
      <td><%= "#{post.post_comment.count} コメント" %></td>
      <!--いいね機能-->
      <td>
        <% if post.favorited_by?(current_user) %>
          <p>
            <%= link_to post_favorite_path(post), method: :delete do %>
              ♥<%= post.favorites.count %> いいね
            <% end %>
          </p>
        <% else %>
          <p>
            <%= link_to post_favorite_path(post), method: :post do %>
              ♡<%= post.favorites.count %> いいね
            <% end %>
          </p>
        <% end %>
      </td>
      <td>
       <% if post.user == current_user %>
          <%= link_to "投稿編集", edit_post_path(post) %>
          |
          <%= link_to "削除", post_path(post), method: :delete %>
       <% end %>
      </td>
    </tr>

   <% end %>
  </tbody>
</table>