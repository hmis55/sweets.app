<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="text-center">
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th class="col-2">ユーザー名</th>
              <th class="col-2">ユーザーページ</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% users.each do |user| %>
              <tr>
                <td class="col-2"><%= user.name %></td>
                <td class="col-2"><%= link_to "ユーザーページ", user, class: "btn btn-info" %></td>
                <td class="col-2"><%= render "public/relationships/btn", user: user %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>