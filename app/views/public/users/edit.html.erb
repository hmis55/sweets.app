<h1>会員情報編集ページ</h1>
<%= flash[:notice] %>
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user, url: user_path, method: :patch do |f| %>
      <table class="table ">

            <th>登録名</th>
            <tr></tr>
            <td><%= f.text_field :name %></td>
          <tr>
            <th>メールアドレス</th>
            <tr></tr>
            <td><%= f.text_field :email %></td>
            <td></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
            <td><%= link_to "退会する", users_unsubscribe_path, class: "btn btn-danger" %></td>
          </tr>
      　</table>
       <% end %>
