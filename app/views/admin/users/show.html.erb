<h4><%= @user.name %>さんの会員情報</h4>
<%= flash[:notice] %>

<table>
  <tr>
    <th>ユーザー名</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
  <td><%= link_to 'ユーザー情報編集', edit_admin_user_path(@user) %></td>
  <tr>
  <th>会員ステータス</th>
            <td>
              <% if @user.is_active == true %>
                <p class="text-success font-weight-bolder">有効</p>
              <% else %>
                <p class="text-secondary font-weight-bolder">退会</p>
              <% end %>
            </td>
  </tr>
</table>
<table class='table table-hover table-inverse'>
    <thead>
      <h4><%= @user.name %>さんの投稿一覧</h4>
      <th>タイトル</th>
      <th>説明</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
           <% if post.image.attached? %>
              <%= image_tag post.image, size: "100x100" %>
           <% else %>
              <%= image_tag 'no_image.jpg', size: "100x100" %>
           <% end %>
           <p><%= link_to post.user.name, admin_user_path(post.user) %></p>
          </td>
          <td><%= link_to post.title, admin_post_path(post)%></td>
          <td><%= post.body %></td>
          <!--コメント数を表示-->
          <td><%= "#{post.post_comment.count} コメント" %></td>
        </tr>
      <% end %>
     </tboy>
</table>