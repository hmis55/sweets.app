<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if @model == 'user' %>
        <h3>Users search for "<%= @content %>"</h3>
        <div class="table-responsive">
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th></th>
                <th>ユーザ名</th>
              </tr>
            </thead>
            <tbody>
              <% @records.each do |user| %>
                <tr>
                  <td><%= link_to user.name, user_path(user) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

      <% elsif @model == 'post' %>
        <h3>Books search for "<%= @content %>"</h3>
        <div class="table-responsive">
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th></th>
                <th>タイトル</th>
                <th>説明</th>
                <th>コメント数</th>
              </tr>
            </thead>
            <tbody>
              <% @records.each do |post| %>
                <tr>
                  <td>
                    <% if post.image.attached? %>
                      <%= image_tag post.image, size: "100x100", class: "img-thumbnail" %>
                    <% else %>
                      <%= image_tag 'no_image.jpg', size: "100x100", class: "img-thumbnail" %>
                    <% end %>
                  </td>
                  <td><%= link_to post.title, post_path(post) %></td>
                  <td><%= post.body %></td>
                  <td><%= "#{post.post_comments.count} コメント" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>